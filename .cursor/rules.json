{
  "formatOnSave": true,
  "formatOnPaste": true,
  "rules": {
    "general": {
      "useEarlyReturns": true,
      "useConstInsteadOfFunction": true,
      "useDescriptiveNames": true,
      "eventHandlerPrefix": "handle",
      "accessibility": {
        "required": true,
        "attributes": ["tabindex", "aria-label", "onClick", "onKeyDown"]
      }
    },
    "styling": {
      "preferTailwind": true,
      "avoidCSS": true,
      "avoidTags": true,
      "useClassSyntax": "class:",
      "avoidTertiaryOperator": true,
      "shadcn": {
        "required": true,
        "components": {
          "useComponents": true,
          "followNaming": true,
          "properImport": true
        },
        "theming": {
          "useThemeProvider": true,
          "followColorScheme": true
        }
      },
      "icons": {
        "useLucideReact": true,
        "properImport": true,
        "consistentSizing": true
      }
    },
    "typescript": {
      "strictMode": true,
      "requireTypes": true
    },
    "codeQuality": {
      "followDRY": true,
      "readabilityOverPerformance": true,
      "noTodos": true,
      "noPlaceholders": true,
      "completeImplementation": true
    },
    "imports": {
      "requireAllImports": true,
      "properComponentNaming": true
    },
    "documentation": {
      "requireComments": false,
      "minimizeProse": true
    },
    "dataFetching": {
      "reactQuery": {
        "required": true,
        "useQueryHooks": true,
        "properCacheKeys": true,
        "errorHandling": true,
        "loadingStates": true,
        "optimisticUpdates": true,
        "infiniteQueries": true,
        "mutations": {
          "useMutationHooks": true,
          "properErrorHandling": true
        }
      }
    },
    "stateManagement": {
      "zustand": {
        "required": true,
        "store": {
          "useCreateStore": true,
          "properNaming": true,
          "typeDefinitions": true,
          "slicePattern": true
        },
        "hooks": {
          "useStoreHooks": true,
          "selectorPattern": true,
          "properMemoization": true
        },
        "actions": {
          "immutableUpdates": true,
          "properErrorHandling": true,
          "asyncActions": true
        },
        "middleware": {
          "persist": true,
          "devtools": true
        }
      }
    },
    "packageManager": {
      "pnpm": {
        "required": true,
        "workspace": {
          "useWorkspace": true,
          "properStructure": true
        },
        "dependencies": {
          "useExactVersions": true,
          "properLockfile": true,
          "avoidDuplicateDeps": true
        },
        "scripts": {
          "usePnpmScripts": true,
          "properNaming": true
        },
        "security": {
          "auditDeps": true,
          "usePnpmStore": true
        }
      }
    }
  },
  "languages": {
    "supported": [
      "react",
      "nextjs",
      "javascript",
      "typescript",
      "html",
      "css",
      "tailwindcss"
    ]
  },
  "editor": {
    "indent": {
      "type": "spaces",
      "size": 2
    },
    "maxLineLength": 80,
    "trailingWhitespace": "trim",
    "endOfLine": "lf"
  }
} 